<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/partido"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_noticia"
            android:layout_width="wrap_content"
            android:layout_height="224dp"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/tv_titulo_noticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_noticia"
            android:gravity="center_vertical"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:textAppearance="@style/CategoriaProductos"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_fecha_noticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_noticia"
            android:gravity="center_vertical"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:textAppearance="@style/CategoriaProductos"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_copete_noticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_titulo_noticia"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:textAppearance="@style/CategoriaProductos"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_link_noticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_copete_noticia"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:text="Leer nota completa"
            android:textAppearance="@style/CategoriaProductos"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_autor_autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_copete_noticia"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:text="@string/autor"
            android:textAppearance="@style/CategoriaProductos"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_autor_noticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_autor_autor"
            android:layout_alignBottom="@+id/tv_autor_autor"
            android:layout_toEndOf="@+id/tv_autor_autor"
            android:layout_toRightOf="@+id/tv_autor_autor"
            android:paddingBottom="10dp"
            android:textAppearance="@style/CategoriaProductos"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>


</android.support.v7.widget.CardView>