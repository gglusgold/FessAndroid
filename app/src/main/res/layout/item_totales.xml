<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/partido">


    <TextView
        android:id="@+id/tv_cantidad_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_nombre_total"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textAppearance="@style/TituloProductos"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_nombre_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/tv_cantidad_total"
        android:layout_toLeftOf="@+id/tv_precio_total"
        android:layout_toRightOf="@+id/tv_cantidad_total"
        android:layout_toStartOf="@+id/tv_precio_total"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Aceite mezcla seleccion de giraasol y mail - zanini - 1lit"
        android:textAppearance="@style/TituloProductos"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_precio_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_nombre_total"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="$33"
        android:textAppearance="@style/TituloProductos"
        android:textSize="16sp" />
</RelativeLayout>