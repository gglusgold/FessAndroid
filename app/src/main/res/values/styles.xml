<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Titulos" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="SubTitulos" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Switch" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubTitulosLocales" parent="SubTitulos">

    </style>

    <style name="TitulosLocales" parent="Titulos">

    </style>

    <style name="CategoriaProductos" parent="Titulos">

    </style>

    <style name="TituloProductos" parent="Titulos">

    </style>


    <style name="Registrarse" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blanco</item>

        <item name="android:textColorHint">@color/blanco</item>
    </style>


    <style name="EditText.Login" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorAccent">@color/blanco</item>
        <item name="colorControlNormal">@color/blanco</item>
        <item name="colorControlActivated">@color/blanco</item>
    </style>

    <style name="SpinnerCategorias" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:dropDownSelector">#FFFFFF</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="spinner_blanco" parent="Base.Widget.AppCompat.Spinner">

        <item name="android:textColor">@color/blanco</item>
    </style>


    <color name="negro">#000000</color>
</resources>
